<body>

  <nav class="navbar navbar-default navbar-fixed">

    <div class="container-fluid">
      <% if (userLogged) { %>
        <a href="/" style="float:left"><h1>E-CORP</h1></a>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/transactions">Mes transactions</a></li>
          <li><a href="/transactions/add">Effectuer une transaction</a></li>
          <li><a href="/users/me">Mon compte</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
        <%}%>
      </div>
    </nav>
<main class="main-content">
  <div class="hero" data-bg-image="../dummy/bg.jpg">
    <div class="container">
      <div class="row">
        <h2>Mon compte</h2>
        <div class="container-fluid well span6">
          	<div class="row-fluid">
                  <div class="span2" >
          		    <img src="http://www.datchme.com/images/avatar_blank.png?version=1.61" style="height:100px;" class="img-circle">
                  </div>
                  <div class="span8">
                      <h3>  <%= user.firstname%> <%= user.lastname%></h3>
                      <h6>Numéro du compte: <b><%= account.account_nb %></b> </h6>
                      <h6>Solde du compte: <b><%= account.credit %> €</b></h6>
                      <h6>Token: <b><%=account.token%></b></h6>
                  </div>

                  <div class="span2">
                      <h3>Actions</h3>
                          <ul>
                              <li><a href="/users/edit/<%=user.id%>"><span class="icon-wrench"></span> Ajouter de l'argent</a></li>
                              <li><a href="/transactions/add"><span class="icon-wrench"></span> Virement</a></li>
                              <li><a href="/transactions/add"><span class="icon-wrench"></span> Remboursement</a></li>
                          </ul>

                  </div>
          </div>
          </div>
      </div>
    </div>
  </div>
</main>
<footer>
<div class="container">
